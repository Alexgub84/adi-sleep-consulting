---
import { getLangFromUrl } from '../i18n/config.js';

const lang = getLangFromUrl(Astro.url);

const content = {
  en: {
    title: "Meet Our Founder",
    subtitle: "Professional Sleep Consultant",
    description: "With over 10 years of experience in sleep consulting, our founder has helped hundreds of families achieve better sleep patterns and improve their quality of life. Specializing in infant and toddler sleep training, we provide personalized solutions tailored to each family's unique needs.",
    ctaText: "Read More",
    ctaLink: "/en/about"
  },
  he: {
    title: "הכירו את המייסדת",
    subtitle: "יועצת שינה מקצועית",
    description: "עם יותר מ-10 שנות ניסיון בייעוץ שינה, המייסדת שלנו עזרה למאות משפחות להשיג דפוסי שינה טובים יותר ולשפר את איכות החיים שלהן. מתמחה באימון שינה לתינוקות ופעוטות, אנו מספקים פתרונות מותאמים אישית המותאמים לצרכים הייחודיים של כל משפחה.",
    ctaText: "קרא עוד",
    ctaLink: "/he/about"
  }
};

const { title, subtitle, description, ctaText, ctaLink } = content[lang as keyof typeof content] || content.en;
---

<section class="py-12 md:py-16">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex flex-col md:flex-row items-center gap-12">
      <!-- Founder Image -->
      <div class="w-full md:w-1/2">
        <div class="aspect-square bg-form-bg rounded shadow flex items-center justify-center">
          <div class="text-center">
            <svg class="w-24 h-24 mx-auto text-brand-accent mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <p class="text-lg text-text-dark font-medium">Founder Photo</p>
          </div>
        </div>
      </div>
      
      <!-- Founder Text -->
      <div class="w-full md:w-1/2 space-y-6">
        <div>
          <h2 class="text-2xl md:text-4xl font-bold text-text-dark mb-2">{title}</h2>
          <p class="text-lg font-medium text-brand-accent">{subtitle}</p>
        </div>
        
        <p class="text-base leading-relaxed text-text-dark">
          {description}
        </p>
        
        <a 
          href={ctaLink}
          class="inline-block bg-brand-accent hover:bg-brand-accent-dark text-white px-6 py-2 rounded shadow font-semibold transition-colors"
        >
          {ctaText}
        </a>
      </div>
    </div>
  </div>
</section> 