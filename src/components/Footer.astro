---
import { getLangFromUrl, useTranslations } from '../i18n/config.js';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Footer links - only include pages that actually exist
const footerLinks = [
  { href: `/${lang}/about`, label: t('footer.about') },
  { href: `/${lang}/contact`, label: t('footer.contact') },
  { href: `/${lang}/products`, label: t('footer.products') }
];
---

<footer class="bg-brand-accent text-white py-12 mt-auto shadow-lg">
    <div class="max-w-6xl mx-auto px-4">
        <div class="flex flex-col md:flex-row justify-between items-center gap-6">
            <!-- Copyright -->
            <div class="text-center md:text-left">
                <p class="text-sm text-soft-border">
                    {t('footer.copyright')}
                </p>
            </div>
            
            <!-- Footer Links -->
            <div class="flex flex-wrap justify-center gap-8">
                {footerLinks.map((link: any) => (
                    <a 
                        href={link.href} 
                        class="text-soft-border hover:text-white text-sm no-underline transition-colors font-medium"
                    >
                        {link.label}
                    </a>
                ))}
            </div>
        </div>
    </div>
</footer> 