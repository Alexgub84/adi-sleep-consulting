<form id="contactFormHebrew" class="max-w-md mx-auto p-6 bg-form-bg rounded shadow space-y-4">
    <div class="flex justify-end mb-4">
        <button 
            type="button"
            id="fillSampleDataHebrew"
            class="bg-brand-accent hover:bg-brand-accent-dark text-white px-4 py-2 rounded transition-colors text-sm flex items-center gap-2"
        >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
            </svg>
            מילוי נתונים לדוגמה
        </button>
    </div>
    <div class="space-y-4">
        <!-- Name -->
        <div>
            <label for="firstNameHebrew" class="block text-sm font-medium text-text-dark mb-1">שם פרטי *</label>
            <input 
                type="text" 
                id="firstNameHebrew" 
                name="firstName" 
                required
                class="w-full px-4 py-2 border border-soft-border rounded focus:outline-none focus:ring-2 focus:ring-brand-accent"
            >
        </div>

        <!-- Last Name -->
        <div>
            <label for="lastNameHebrew" class="block text-sm font-medium text-text-dark mb-1">שם משפחה *</label>
            <input 
                type="text" 
                id="lastNameHebrew" 
                name="lastName" 
                required
                class="w-full px-4 py-2 border border-soft-border rounded focus:outline-none focus:ring-2 focus:ring-brand-accent"
            >
        </div>

        <!-- Phone -->
        <div>
            <label for="phoneHebrew" class="block text-sm font-medium text-text-dark mb-1">מספר טלפון *</label>
            <input 
                type="tel" 
                id="phoneHebrew" 
                name="phone" 
                required
                pattern="[0-9]{10}"
                title="אנא הזן מספר טלפון תקין בן 10 ספרות"
                class="w-full px-4 py-2 border border-soft-border rounded focus:outline-none focus:ring-2 focus:ring-brand-accent"
            >
        </div>

        <!-- Email -->
        <div>
            <label for="emailHebrew" class="block text-sm font-medium text-text-dark mb-1">אימייל *</label>
            <input 
                type="email" 
                id="emailHebrew" 
                name="email" 
                required
                class="w-full px-4 py-2 border border-soft-border rounded focus:outline-none focus:ring-2 focus:ring-brand-accent"
            >
        </div>

        <!-- Baby Age -->
        <div>
            <label for="babyAgeHebrew" class="block text-sm font-medium text-text-dark mb-1">גיל התינוק (בחודשים) *</label>
            <input 
                type="number" 
                id="babyAgeHebrew" 
                name="babyAge" 
                min="0" 
                max="36" 
                required
                class="w-full px-4 py-2 border border-soft-border rounded focus:outline-none focus:ring-2 focus:ring-brand-accent"
            >
        </div>

        <!-- Additional Comments -->
        <div>
            <label for="commentsHebrew" class="block text-sm font-medium text-text-dark mb-1">הערות נוספות</label>
            <textarea 
                id="commentsHebrew" 
                name="comments" 
                rows="4"
                class="w-full px-4 py-2 border border-soft-border rounded focus:outline-none focus:ring-2 focus:ring-brand-accent"
            ></textarea>
        </div>

        <button 
            type="submit"
            class="w-full bg-brand-accent hover:bg-brand-accent-dark text-white py-2 px-4 rounded transition-colors"
        >
            שלח
        </button>
    </div>
</form>

<script>
    const form = document.getElementById('contactFormHebrew') as HTMLFormElement;
    const fillButton = document.getElementById('fillSampleDataHebrew');
    
    // Sample data
    const sampleData = {
        firstName: "יוסי",
        lastName: "כהן",
        phone: "0501234567",
        email: "yossi.cohen@example.com",
        babyAge: "12",
        comments: "זהו תוכן לדוגמה למטרות בדיקה."
    };
    
    // Fill sample data function
    fillButton?.addEventListener('click', () => {
        console.log('Filling sample data'); //@@@Alex
        Object.entries(sampleData).forEach(([key, value]) => {
            const element = form.elements.namedItem(key) as HTMLInputElement | HTMLTextAreaElement;
            if (element) {
                element.value = value;
            }
        });
    });

    form.addEventListener('submit', (e) => {
        e.preventDefault();
        
        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());
        
        // Validate data
        if (!validateForm(data)) {
            return;
        }

        // Show alert with form data
        alert(JSON.stringify(data, null, 2));
        
        // Reset form
        form.reset();
    });

    function validateForm(data: any): boolean {
        // Basic validation
        if (!data.firstName || !data.lastName) {
            alert('אנא הזן שם פרטי ושם משפחה');
            return false;
        }

        if (!data.phone || !/^\d{10}$/.test(data.phone)) {
            alert('אנא הזן מספר טלפון תקין בן 10 ספרות');
            return false;
        }

        if (!data.email || !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(data.email)) {
            alert('אנא הזן כתובת אימייל תקינה');
            return false;
        }

        const babyAge = parseInt(data.babyAge);
        if (isNaN(babyAge) || babyAge < 0 || babyAge > 36) {
            alert('אנא הזן גיל תינוק תקין בין 0 ל-36 חודשים');
            return false;
        }

        return true;
    }
</script> 