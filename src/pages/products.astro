---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title="My Products">
    <Header />
    <main class="container mx-auto px-4 sm:px-6 py-8 max-w-4xl">
        <h1 class="text-2xl sm:text-3xl font-bold mb-4 text-center sm:text-left">My Products</h1>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
            <div class="bg-white p-4 rounded-lg shadow">
                <h2 class="text-xl font-semibold mb-2">Product 1</h2>
                <p class="text-gray-700 text-sm sm:text-base">Product description here.</p>
            </div>
            <div class="bg-white p-4 rounded-lg shadow">
                <h2 class="text-xl font-semibold mb-2">Product 2</h2>
                <p class="text-gray-700 text-sm sm:text-base">Product description here.</p>
            </div>
            <div class="bg-white p-4 rounded-lg shadow">
                <h2 class="text-xl font-semibold mb-2">Product 3</h2>
                <p class="text-gray-700 text-sm sm:text-base">Product description here.</p>
            </div>
        </div>
    </main>
</Layout> 