---
import Layout from '../../layouts/en/PageLayout.astro';
---

<Layout title="My Products">
    <main class="py-8">
        <h1 class="text-3xl sm:text-4xl font-bold mb-8 text-center sm:text-left text-gray-800">My Products</h1>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
            <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                <h2 class="text-xl font-semibold mb-3 text-gray-800">Personal Sleep Consultation</h2>
                <p class="text-gray-700 text-sm sm:text-base leading-relaxed">Personalized consultation to improve your baby's sleep</p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                <h2 class="text-xl font-semibold mb-3 text-gray-800">Breastfeeding Support</h2>
                <p class="text-gray-700 text-sm sm:text-base leading-relaxed">Professional support for breastfeeding and weaning</p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                <h2 class="text-xl font-semibold mb-3 text-gray-800">Parent Workshops</h2>
                <p class="text-gray-700 text-sm sm:text-base leading-relaxed">Group workshops for parents on sleep and development</p>
            </div>
        </div>
    </main>
</Layout> 